<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-cart-check"></i> Confirmar Compra</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3 mb-md-0">
                         <img src="{{#if libro.url_cover}}{{libro.url_cover}}{{else}}/images/placeholder_libro.png{{/if}}" 
                              class="img-fluid rounded shadow-sm" 
                              alt="{{libro.nombre}}"
                              style="max-height: 250px;">
                    </div>
                    
                    <div class="col-md-8">
                        <h3 class="mb-3">{{libro.nombre}}</h3>
                        
                        <div class="mb-4">
                            <span class="badge bg-secondary fs-6">
                                Disponibles: {{libro.stock}} unidades
                            </span>
                        </div>
                        
                        <hr>

                        <div id="compra-alerts"></div>
                        
                        <form id="form-compra" data-id="{{libro.id}}">
                            <div class="mb-4">
                                <label for="cantidad" class="form-label fw-bold">Cantidad a llevar:</label>
                                <input type="number" class="form-control form-control-lg" 
                                       id="cantidad" name="cantidad" 
                                       min="1" max="{{libro.stock}}" value="1" required>
                                <div class="form-text">MÃ¡ximo {{libro.stock}} unidades.</div>
                            </div>
                            
                            <div class="d-flex gap-2 justify-content-end">
                                <a href="/libros/catalogo" class="btn btn-outline-secondary">
                                    Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Confirmar Compra
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>